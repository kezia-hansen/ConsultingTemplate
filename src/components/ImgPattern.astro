---
import "../styles/global.css";
import "../styles/reset.css";
---

<figure>
  <img src="../images/imgpattern.jpg" alt="People sitting at a table" />
</figure>

<style>
  figure {
    position: relative;

    &::before {
      --square-count: 15;
      z-index: -1;
      content: "";
      position: absolute;
      inset: -50px -50px auto auto;
      inline-size: calc(var(--square-count) * 1.34rem - 0.67rem);
      aspect-ratio: 1;
      background: linear-gradient(135deg, #be965d, #976f40, #c99b61, #f0be7b, #ffcb85, #eebc79, #c0935b, #976f40) 0 0 / 100% 100%;
      mask:
        var(--mini-square-pattern) 0 0 / 1.34rem 1.34rem,
        var(--mini-square-pattern) 0.67rem 0.67rem / 1.34rem 1.34rem;
    }

    &::after {
      content: "";
      position: absolute;
      right: -2rem;
      top: -1rem;
      background: #4eaf4e;
      width: 8.1rem;
      height: 7.89231rem;
      border-radius: 1.25rem;
      z-index: -1;
    }
  }

  figure > img {
    width: 32.5rem;
    height: 23.7rem;
    flex-shrink: 0;
    border-radius: 1.8125rem;
  }

  @layer {
    body {
      min-height: 100svh;
      font-family: system-ui, sans-serif;
      display: grid;
      place-content: center;
    }
  }
</style>
