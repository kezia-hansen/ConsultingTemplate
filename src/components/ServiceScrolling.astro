---
import "../styles/global.css";
import "../styles/reset.css";
import { Icon } from "astro-icon/components";
---

<main>
  <div>
    <Icon name="arrow-round-bl" />
    <Icon name="arrow-round-yl" />
  </div>
  <section class="full">
    <ul role="list">
      <li class="bg-primary">
        c
