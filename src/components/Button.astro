---
import "../styles/global.css";
import "../styles/reset.css";
const { title } = Astro.props;
---

<button>{title}</button>

<style>
  button {
    display: flex;
    width: 10.4375rem;
    padding: 0.9375rem 2.125rem;
    align-items: flex-start;
    gap: 0.625rem;
    flex-shrink: 0;
    border-radius: 2.625rem;
    background: #181818;
    outline: none;
    border: none;

    color: #fff;
    font-family: "Lato", sans-serif;
    font-size: 1.125rem;
    font-style: normal;
    font-weight: 600;
    line-height: 1.8rem;
    white-space: nowrap;
  }
</style>
